<Page
    x:Class="TestUWP1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TestUWP1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid>
        <Frame x:Name="ContentFrame">
            <StackPanel>
                <ToggleSwitch Header="Theme" OnContent="Light" OffContent="Dark" Margin="10,10,0,0" Toggled="ToggleSwitch_Toggled" Loaded="ToggleSwitch_Loaded"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE946;" VerticalAlignment="Center" Margin="10,1,5,0"/>
                    <TextBlock   Text="Po změně restartujte aplikaci" />
                </StackPanel>
            </StackPanel>

            <Frame.ContentTransitions>
                <TransitionCollection>
                    <ContentThemeTransition/>
                </TransitionCollection>
            </Frame.ContentTransitions>
        </Frame>

        <!--custom titlebar-->
    </Grid>

</Page>

    
